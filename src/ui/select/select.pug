include layout/utils

-
  var options = [
    'по умолчанию',
    'по названию',
    'по цене',
    'по названию',
  ]

.select-wrapper.container Сортировать:
  .select
    input(type='hidden', value=options[0])
    .select__selected.select__item
      +wrapBreak: button=options[0]
    ul.select__list
      each option in options
        li.select__item: +wrapBreak: button=option